<%= form_for :repo, url:awords_path do |f| %>
  <%= f.text_field(:repo_name, value:@repo_name) %>
  <%= submit_tag("Search") %>
<% end %>
<h1>Results</h1>
<table>
  <% @result.each_with_index do |person, i| %>
    <tr>
      <td><%= person %></td>
      <td><%= link_to "download pdf", aword_path(format:'pdf', person:person, number:i+1) %></td>
    </tr>
  <% end %>
</table>
<p>
  <%= link_to "download zip (#{@result.size})", awords_path(format:'zip', persons:@result) %>
</p>
